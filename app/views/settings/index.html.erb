<table class="table">
  <tr>
    <th>User Name</th>
    <th>Last Name</th>
    <th>First Name</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td id="approve"><%= user.status == true ? "Approved" : "Not Approved" %></td>
      <td id="approve_link"><%= user.status == true ? (link_to "Not Approve",approve_setting_path(user,:status => false),:method => :put,:remote => true) : (link_to "Approve",approve_setting_path(user,:status => true),:method => :put,:remote => true) %></td>
    </tr>
  <% end %>
</table>